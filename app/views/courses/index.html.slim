= content_for :title do 
 | Courses

.row
  .large-6.columns
    h2 Courses
.row
  .large-12.columns
    | Pick and choose your courses 
    span.hint
      | or 
      = link_to "talk to us", contact_us_path
.row
  .large-12.columns.meter.text-right
    span.meter-tag Newbie
    span.meters
      - Level.all.collect { |l| l.name }.each do |level|
        span.level_color class="#{level.parameterize}"
    span.meter-tag Expert
.row
  .section-container.vertical-tabs.rounded data-section="vertical-tabs"
    - @disciplines.each do |d|
      section
        p.title data-section-title=""
          a.discipline href="#" = d.name
        .content data-section-content=""
          .row
            - if Course.beginner_courses(d).count > 0
              .row.tagrow
                .large-3.columns
                  span.tag Beginner
                .large-9.columns
                  span.courses.rounded
                    - Course.beginner_courses(d).each do |course|
                      - if course.active?
                        = link_to course_path(course) do
                          span.course
                            span.level_color class="#{course.level.name.parameterize}"
                            = course.name
                      - elsif course.upcoming?
                        span.course.inactive.has-tip title="Coming soon!"
                          span.level_color class="#{course.level.name.parameterize}"
                          = course.name
            - if Course.intermediate_courses(d).count > 0
              .row.tagrow
                .large-3.columns
                  span.tag Intermediate
                .large-9.columns
                  span.courses.rounded
                    - Course.intermediate_courses(d).each do |course|
                      - if course.active?
                        = link_to course_path(course) do
                          span.course
                            span.level_color class="#{course.level.name.parameterize}"
                            = course.name
                      - elsif course.upcoming?
                        span.course.inactive.has-tip title="Coming soon!"
                          span.level_color class="#{course.level.name.parameterize}"
                          = course.name
            - if Course.advanced_courses(d).count > 0
              .row.tagrow
                .large-3.columns
                  span.tag Advanced
                .large-9.columns
                  span.courses.rounded
                    - Course.advanced_courses(d).each do |course|
                      - if course.active?
                        = link_to course_path(course) do
                          span.course
                            span.level_color class="#{course.level.name.parameterize}"
                            = course.name
                      - elsif course.upcoming?
                        span.course.inactive.has-tip title="Coming soon!"
                          span.level_color class="#{course.level.name.parameterize}"
                          = course.name
            - if Course.special_courses(d).count > 0
              .row.tagrow
                .large-3.columns
                  span.tag Specialities
                .large-9.columns
                  span.courses.rounded
                    - Course.special_courses(d).each do |course|
                      - if course.active?
                        = link_to course_path(course) do
                          span.course
                            span.level_color class="#{course.level.name.parameterize}"
                            = course.name
                      - elsif course.upcoming?
                        span.course.inactive.has-tip title="Coming soon!"
                          span.level_color class="#{course.level.name.parameterize}"
                          = course.name